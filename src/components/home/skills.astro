---

const skills = [
	"Javascript",
	"Typescript",
	"Node.js",
	"Express.js",
	"Hono.js",
	"Vue.js",
	"React.js",
	"Next.js",
	"Golang",
	"Flutter",
	"Docker",
	"Git",
	"Github Actions",
	"MongoDB",
	"PostgreSQL",
];
---

<section id="skills" class="mt-4">
  <h2 class="text-2xl font-bold underline">My Skills</h2>
  <ul class="skills-grid">
    {
      skills.map((skill) => (
        <li class="skill-item">{skill}</li>
      ))
    }
  </ul>
</section>

<style>
  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    gap: 0.25rem;
    padding-left: 1.5rem;
  }
  .skill-item {
    list-style-type: disc;
  }
</style>
