---
const projects = [
	{
		title: "Simplified iMaluum",
		image: "/imaluum.png",
		link: "https://imaluum.quddus.my",
	},
	{
		title: "IdeaSpace",
		image: "/ideaspace.png",
		link: "https://ideaspace.nrmnqdds.com",
	},
	{
		title: "MallamChat",
		image: "/mallamchat.png",
		link: "https://mallam.quddus.my",
	},
	{
		title: "Mallam NPM",
		image: "/mallam.png",
		link: "https://npmjs.org/mallam",
	},
];
---
<section id="projects" class="mt-4">
  <h2 class="text-2xl font-bold underline">Cool Projects</h2>
  <div class="grid grid-cols-2 gap-4 mt-2">
    {projects.map((project) => (
    <div class="border-2 border-[#000080] p-2 text-center">
      <img src={project.image} alt={`Project ${project.title}`} class="mx-auto w-full" />
      <p class="mt-2 font-bold">{project.title}</p>
      <a href={project.link} class="text-[#0000FF] hover:underline">View Project</a>
    </div>
    ))}
  </div>
</section>
